<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutSimpleDialog"
    android:layout_margin="20dp"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:id="@+id/dialog_simpletime">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_title1"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="시간 기록"
                android:fontFamily="@font/robotobold"
                android:textColor="#202020"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgbtn_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/white"
                app:tint="#000000"
                app:srcCompat="@android:drawable/ic_input_add"
                android:contentDescription="plus_button"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn1"
                            android:layout_width="150dp"
                            android:layout_height="48dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/dialog_button"
                            android:text="외출준비"
                            android:fontFamily="@font/robotobold"
                            android:textColor="@color/white"
                            android:textSize="12sp"

                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn2"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/dialog_button2"
                            android:text="토익 공부"
                            android:fontFamily="@font/robotobold"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn3"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/dialog_button3"
                            android:text="LUNCH"
                            android:fontFamily="@font/robotobold"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn4"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/dialog_button4"
                            android:text="책 읽기"
                            android:fontFamily="@font/robotobold"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn5"
                            android:layout_width="170dp"
                            android:layout_height="48dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/dialog_button"
                            android:text="BreakFast"
                            android:fontFamily="@font/robotobold"
                            android:textColor="@color/white"
                            android:textSize="12sp"

                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>


</LinearLayout>